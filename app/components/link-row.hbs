{{#if this.showLink}}
  <li class="list-group-item clearfix h-entry">
    {{#if this.editing}}
      <LinkForm
        @link={{this.link}}
        @onSave={{fn this.finishEditing}}
        @onCancel={{fn this.finishEditing}}
      />
    {{else}}
      <LinkDetail
        @link={{this.link}}
        @onEdit={{fn this.edit}}
      />
    {{/if}}
  </li>
{{/if}}
