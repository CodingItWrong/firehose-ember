<form {{on "submit" this.handleAdd}}>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-10">
      <div class="form-group">
        <Input
          data-test-url
          @value={{this.url}}
          @id="url"
          @type="url"
          @placeholder="URL to Add"
          @classNames="form-control"
        />
      </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-2">
      <div class="form-group">
        <BsButton
          @buttonType="submit"
          @type="primary"
          @disabled={{this.isSaving}}
          class="btn-block"
          data-test-add-button
        >
          {{if this.isSaving "Addingâ€¦" "Add"}}
        </BsButton>
      </div>
    </div>
  </div>
  {{#if this.error}}
    <BsAlert @type="danger">
      {{this.error}}
    </BsAlert>
  {{/if}}
</form>
