<div class="row mt-3">
  <div class="col-sm-12 col-md-6"></div>
  <div class="col-sm-12 col-md-6">
    <PaginationControls
      @totalPages={{this.totalPages}}
      @pageNumber={{this.pageNumber}}
      @prevPage={{this.prevPage}}
      @nextPage={{this.nextPage}}
    />
  </div>
</div>

<ul class="list-group" data-test-links>
  {{#if this.session.isAuthenticated}}
    {{#each this.loggedInSortedLinks as |link|}}
      <LinkRow @link={{link}} @showIfRead={{false}} />
    {{/each}}
  {{else}}
    {{#each this.loggedOutSortedLinks as |link|}}
      <LinkRow @link={{link}} />
    {{/each}}
  {{/if}}
</ul>

<div class="row mt-3">
  <div class="col-sm-12 col-md-6"></div>
  <div class="col-sm-12 col-md-6">
    <PaginationControls
      @totalPages={{this.totalPages}}
      @pageNumber={{this.pageNumber}}
      @prevPage={{this.prevPage}}
      @nextPage={{this.nextPage}}
    />
  </div>
</div>
